{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/\$1" },
    { "src": "/static/(.*)", "dest": "/static/\$1", "headers": { "cache-control": "public, max-age=31536000, immutable" } },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
